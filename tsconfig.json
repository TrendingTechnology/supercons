{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "ES2017"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    "src/**.ts",
    "src/**.tsx",
  ]
}
