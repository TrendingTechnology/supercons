{
    "compilerOptions": {
      "alwaysStrict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "lib": [
        "ES2017"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDeclarationOnly": true,
      "declaration": true,
      "declarationMap": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "strict": true,
      "target": "ES2017"
    },
    "include": [
      "src/**.ts",
      "src/**.tsx",
    ]
  }